<Window x:Class="ChatUDP_Aloisi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatUDP_Aloisi"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="lblLuigi" Content="Luigi" HorizontalAlignment="Left" Height="32" Margin="348,18,0,0" VerticalAlignment="Top" Width="132"/>
        <Label x:Name="lblLetsGo" Content="Let's Go!" HorizontalAlignment="Left" Height="32" Margin="348,143,0,0" VerticalAlignment="Top" Width="132"/>
        <TextBox x:Name="txtTo" HorizontalAlignment="Left" Height="32" Margin="348,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="132"/>
        <TextBox x:Name="txtMex" HorizontalAlignment="Left" Height="32" Margin="348,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="132"/>
        <Button x:Name="btnGo" Content="Go" HorizontalAlignment="Left" VerticalAlignment="Top" Width="132" Margin="348,266,0,0" IsDefault="True" Height="32" Click="btnGo_Click"/>
        <TextBox x:Name="txtChat" HorizontalAlignment="Left" Height="298" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="184"/>

    </Grid>
</Window>
